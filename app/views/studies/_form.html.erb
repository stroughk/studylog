<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@study, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :programming_language %>
        </div>
        <div class="col-sm-30">
          <%= f.text_field :programming_language, class: "form-control", placeholder: "Enter programming language", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :topic %>
        </div>
        <div class="col-sm-30">
          <%= f.text_field :topic, class: "form-control", placeholder: "Enter topic you studied" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :source %>
        </div>
        <div class="col-sm-30"> 
          <%= f.text_field :source, class: "form-control", placeholder: "Enter the source used" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-30"> 
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter detailed description about what you learned" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :mood %>
        </div>
        <div class="col-sm-30"> 
          <%= f.text_field :mood, class: "form-control", placeholder: "Enter how you feel today" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">  
      <%= link_to "Cancel request and return to studies", studies_path %>    
    </div>
  </div>
</div>
