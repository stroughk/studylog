<h1 align="center">All Your Studies</h1>

<% @studies.each do |study| %><br>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <div class="well well-lg">
                <div class="study-title">
                    <%= link_to study.programming_language, study_path(study) %>
                </div>
                <div class="study_body">
                    <strong>Topic:</strong><%= truncate(study.topic, length: 100) %>
                </div>
                 <div class="study_body">
                    <strong>Source:</strong><%= truncate(study.source, length: 100) %>
                </div>
                 <div class="study_body">
                    <strong>Description:</strong><%= truncate(study.description, length: 100) %>
                </div>
                 <div class="study_body">
                    <strong>Mood:</strong><%= truncate(study.mood, length: 100) %>
                </div>
                <div class="study-actions">
                    <%= link_to "Edit Study", edit_study_path(study), class: "btn btn-xs btn-primary" %> 
                    <%= link_to "Delete this study", study_path(study), 
                    method: :delete, data: {confirm: "Are you sure you want to delete this study?"}, 
                    class: "btn btn-xs btn-danger" %>
                </div>
            </div>
        </div>
    </div>
<% end %>
