<h1>Listing All Studies</h1>

<table>
    <tr>
        <th>Programming Language</th>
        <th>Topic</th>
        <th>Source</th>
        <th>Description</th>
        <th>Mood</th>
    </tr>

    <% @studies.each do |study| %>
    <tr>
        <td><%= study.programming_language %></td>
        <td width="15%"><%= study.topic %></td>
        <td width="15%"><%= study.source %></td>
        <td width="30%"><%= study.description %></td>
        <td width="10%"><%= study.mood %></td>
        <td width="5%"><%= link_to 'Edit', edit_study_path(study) %></td>
        <td width="5%"><%= link_to 'Show', study_path(study) %></td>
        <td width="5%"><%= link_to 'Delete', study_path(study), method: :delete, data: {confirm: "Are you sure you want to delete this study?"} %><td>

    </tr>
    <% end %>
</table>