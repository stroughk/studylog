<h2 align="center"><%= @study.programming_language %></h2>
<div class="well col-xs-8 col-xs-offset-2">
    <br>
    <h4 class="description"><strong>Topic:</strong></h4>
    <%= simple_format(@study.topic) %>
    <hr>

    <h4><strong>Source:</strong></h4>
    <%= @study.source %>
    <hr>

    <h4><strong>Description:</strong></h4> 
    <%= @study.description %>
    <hr>

    <h4><strong>Mood:</strong></h4> 
    <%= @study.mood %>
    <hr>

    <div class="study-actions">
        <%= link_to "Edit Study", edit_study_path(@study), class: "btn btn-xs btn-primary" %> 
        <%= link_to "Delete this study", study_path(@study), 
            method: :delete, data: {confirm: "Are you sure you want to delete this study?"}, 
            class: "btn btn-xs btn-danger" %>
        <%= link_to "View all studies", studies_path, class: "btn btn-xs btn-success" %>
    </div>
</div>